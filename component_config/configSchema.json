{
  "type": "object",
  "title": "Xero Accounting configuration",
  "required": [
    "endpoints"
  ],
  "properties": {
    "tenant_ids": {
      "title": "Tenant IDs",
      "description": "Tenant IDs of tenants to download the data from. Leave empty to download all available. Data will be merged from all provided tenants.",
      "type": "array",
      "items": {
        "title": "Tenant ID",
        "type": "string",
        "format": "uuid",
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
      },
      "minItems": 1,
      "uniqueItems": true,
      "propertyOrder": 1
    },
    "endpoints": {
      "title": "Endpoints",
      "description": "Endpoints to download from the Xero Accounting API.",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Accounts",
          "BankTransfers",
          "BatchPayments",
          "BrandingThemes",
          "ContactGroups",
          "Currencies",
          "Employees",
          "ExpenseClaims",
          "InvoiceReminders",
          "Items",
          "LinkedTransactions",
          "Organisations",
          "Payments",
          "Quotes",
          "RepeatingInvoices",
          "TaxRates",
          "Users",
          "Contacts"
        ]
      },
      "minItems": 1,
      "uniqueItems": true,
      "format": "checkbox",
      "propertyOrder": 2
    },
    "modified_since": {
      "title": "Modified since",
      "description": "YYYY-MM-DD formatted date or relative string supported by date parser, e.g. \"5 days ago\", used to filter results if available for given endpoint.",
      "type": "string",
      "minLength": 5,
      "propertyOrder": 3
    },
    "loading_options": {
      "title": "Loading options",
      "type": "object",
      "properties": {
        "incremental_output": {
          "title": "Incremental output",
          "description": "If true (checked), incremental loading will be done when outputting tables.",
          "type": "boolean",
          "format": "checkbox",
          "propertyOrder": 1
        }
      },
      "propertyOrder": 4
    },
    "debug": {
      "title": "Debug",
      "type": "boolean",
      "format": "checkbox",
      "propertyOrder": 5
    }
  }
}